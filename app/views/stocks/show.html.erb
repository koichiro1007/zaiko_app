

<table class="table">
  <tr>
    <th>商品名</th>
    <td><%= @stock.product_name %></td>
    <th>数量</th>
    <td>
      <%= number_with_precision(@stock.number, precision: 7, strip_insignificant_zeros: true) %><%= @stock.unit %>
    </td>
  </tr>
    <th>期限</th>
    <td><%= @stock.expiration_year%>年<%= @stock.expiration_month%>月</td>
    <th>ロット</th>
    <td><%= @stock.lot %></td>
  </tr>
  <tr>
    <th>状態</th>
    <td><%= @stock.status %></td>
    <th>開封日</th>
    <td><%= @stock.opening_year%>年<%= @stock.opening_month%>月</td>
  </tr>
  <%if user_signed_in?%>
  <tr>
    <th>薬局名</th>
    <td><%= @stock.user.pharmacy_name %></td>
    <th>電話番号</th>
    <td><%= @stock.user.phone_number %></td>
  </tr>
  <%end%>
  <tr>
    <th>所在地</th>
    <td colspan="3"><%= @stock.user.prefecture_code %><%= @stock.user.city %></td>
  </tr>
  <tr>
  <tr>
    <th>投稿日</th>
    <td colspan="3"><%= @stock.created_at.to_s(:datetime_jp_show) %></td>
  </tr>
  <tr>
    <th>備考欄</th>
    <td colspan="3"><%= simple_format(@stock.notes) %></td>
  </tr>
</table>









<% if user_signed_in? && current_user.id == @stock.user_id%>
  <%= link_to '編集する', edit_stock_path(@stock.id) %>
  <%= link_to '削除する', stock_path(@stock.id), method: :delete %>
<%end%>

<div>
  <%= link_to 'トップページへ戻る', root_path %>
</div>